<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SecondaryActivityStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoriteTracksRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/emptyFavoriteTracksView"
        style="@style/TracksInformationViewStyle"
        android:visibility="gone">

        <ImageView
            style="@style/TracksNotFoundImageViewStyle"
            android:importantForAccessibility="no" />

        <TextView
            style="@style/TracksInformationTextViewStyle"
            android:text="@string/media_empty_tracks" />

    </LinearLayout>

</FrameLayout>