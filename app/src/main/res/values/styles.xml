<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Activities -->
    <style name="AbstractMainActivityStyle">
        <item name="android:background">@color/blueYP</item>
    </style>

    <style name="MainActivityStyle" parent="AbstractMainActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SecondaryActivityStyle" parent="MainActivityStyle">
        <item name="android:background">@color/whiteAbsolute</item>
    </style>

    <!-- Activity titles -->
    <style name="AbstractMainActivityTitleStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="MainActivityTitleStyle" parent="AbstractMainActivityTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="SecondaryActivityTitleStyle" parent="MainActivityTitleStyle">
        <item name="android:textColor">@color/blackAbsolute</item>
    </style>

    <!-- Menu buttons -->
    <style name="MenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/whiteAbsolute</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="android:textAlignment">center</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- Settings view styles -->
    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="AbstractSettingsTextViewStyle">
        <item name="android:textColor">@color/blackAbsolute</item>
    </style>

    <style name="SettingsTextViewStyle" parent="AbstractSettingsTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/settings_textview_padding_vertical</item>
        <item name="android:textSize">@dimen/settings_textview_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="AbstractSettingsIconStyle">
        <item name="tint">@color/grayYP</item>
    </style>

    <style name="SettingsIconStyle" parent="AbstractSettingsIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:paddingVertical">18dp</item>
    </style>

    <style name="ThemeSwitchCompatStyle" parent="SettingsIconStyle">
        <item name="trackTint">@color/grayLightYP</item>
        <item name="thumbTint">@color/grayYP</item>
    </style>

    <!-- Navigation bar styles -->
    <style name="AbstractBackButtonNavigationBarStyle">
        <item name="tint">@color/blackAbsolute</item>
    </style>

    <style name="BackButtonNavigationBarStyle" parent="AbstractBackButtonNavigationBarStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/back_icon</item>
    </style>

    <!-- Search view styles -->
    <style name="AbstractSearchEditTextStyle">
        <item name="android:drawableTint">@color/grayYP</item>
        <item name="android:backgroundTint">@color/grayLightYP</item>
        <item name="android:iconTint">@color/grayYP</item>
        <item name="android:textColorHint">@color/grayYP</item>
    </style>

    <style name="SearchEditTextStyle" parent="AbstractSearchEditTextStyle">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/ic_radius_background</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">40</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_button</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/blackYP</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/search_cursor</item>
    </style>

    <style name="AbstractSearchIconStyle">
        <item name="tint">@color/grayYP</item>
    </style>

    <style name="SearchIconStyle" parent="AbstractSearchIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TracksInformationViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">104dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TracksNotFoundImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/tracks_not_found</item>
    </style>

    <style name="AbstractTracksNetworkErrorImageViewStyle">
        <item name="android:src">@drawable/network_error_light</item>
    </style>

    <style name="TracksNetworkErrorImageViewStyle" parent="AbstractTracksNetworkErrorImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AbstractTracksInformationTextViewStyle">
        <item name="android:textColor">@color/blackYP</item>
    </style>

    <style name="TracksInformationTextViewStyle" parent="AbstractTracksInformationTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AbstractSecondaryButtonStyle">
        <item name="android:backgroundTint">@color/blackYP</item>
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="SecondaryButtonStyle" parent="AbstractSecondaryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <!-- Track recycler item view styles -->
    <style name="AbstractTrackItemImageStyle">
        <item name="background">@color/whiteAbsolute</item>
    </style>

    <style name="TrackItemImageStyle" parent="AbstractTrackItemImageStyle">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AbstractTrackTitleStyle">
        <item name="android:textColor">@color/blackAbsolute</item>
    </style>

    <style name="TrackTitleStyle" parent="AbstractTrackTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AbstractTrackSubtitleStyle">
        <item name="android:textColor">@color/grayYP</item>
    </style>

    <style name="TrackSubtitleStyle" parent="AbstractTrackSubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AbstractTrackIconTitleStyle">
        <item name="tint">@color/grayYP</item>
    </style>

    <style name="TrackIconTitleStyle" parent="AbstractTrackIconTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Player view styles -->
    <style name="TrackInfoTextKeyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grayYP</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="layout_goneMarginBottom">16dp</item>
    </style>

    <style name="AbstractTrackInfoValueTextKeyStyle">
        <item name="android:textColor">@color/blackYP</item>
    </style>

    <style name="TrackInfoValueTextKeyStyle" parent="AbstractTrackInfoValueTextKeyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AbstractTrackDurationStyle">
        <item name="android:textColor">@color/blackYP</item>
    </style>

    <style name="TrackDurationStyle" parent="AbstractTrackDurationStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AbstractTrackPrimaryTitleStyle">
        <item name="android:textColor">@color/blackYP</item>
    </style>

    <style name="TrackPrimaryTitleStyle" parent="AbstractTrackPrimaryTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Media view styles -->
    <style name="AbstractTabLayoutStyle">
        <item name="android:background">@color/whiteAbsolute</item>
        <item name="tabTextColor">@color/blackYP</item>
        <item name="tabIndicatorColor">@color/blackYP</item>
    </style>

    <style name="TabLayoutStyle" parent="AbstractTabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

</resources>