<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Activities -->
    <style name="AbstractMainActivityStyle">
        <item name="android:background">@color/blueYP</item>
    </style>

    <style name="MainActivityStyle" parent="AbstractMainActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SecondaryActivityStyle" parent="MainActivityStyle">
        <item name="android:background">@color/whiteAbsolute</item>
    </style>

    <!-- Activity titles -->
    <style name="AbstractMainActivityTitleStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="MainActivityTitleStyle" parent="AbstractMainActivityTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="SecondaryActivityTitleStyle" parent="MainActivityTitleStyle">
        <item name="android:textColor">@color/blackAbsolute</item>
    </style>

    <!-- Menu buttons -->
    <style name="MenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/whiteAbsolute</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="android:textAlignment">center</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- Settings view styles -->
    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="AbstractSettingsTextViewStyle">
        <item name="android:textColor">@color/blackAbsolute</item>
    </style>

    <style name="SettingsTextViewStyle" parent="AbstractSettingsTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/settings_textview_padding_vertical</item>
        <item name="android:textSize">@dimen/settings_textview_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="AbstractSettingsIconStyle">
        <item name="tint">@color/grayYP</item>
    </style>

    <style name="SettingsIconStyle" parent="AbstractSettingsIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:paddingVertical">18dp</item>
    </style>

    <!-- Navigation bar styles -->
    <style name="AbstractBackButtonNavigationBarStyle">
        <item name="tint">@color/blackAbsolute</item>
    </style>

    <style name="BackButtonNavigationBarStyle" parent="AbstractBackButtonNavigationBarStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/back_icon</item>
    </style>

    <!-- Search view styles -->
    <style name="SearchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>

        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/ic_radius_background</item>

        <item name="android:lines">1</item>
        <item name="android:maxLength">40</item>

        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawableTint">@color/grayYP</item>

        <item name="android:backgroundTint">@color/grayLightYP</item>

        <item name="android:inputType">text</item>
        <item name="android:iconTint">@color/grayYP</item>

        <item name="android:hint">@string/search_button</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/grayYP</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchEditTextCloseButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@drawable/close_icon</item>
    </style>

</resources>