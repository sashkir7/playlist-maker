<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Override activities -->
    <style name="AbstractMainActivityStyle">
        <item name="android:background">@color/blackYP</item>
    </style>

    <style name="SecondaryActivityStyle" parent="MainActivityStyle">
        <item name="android:background">@color/blackYP</item>
    </style>

    <!-- Override activity titles -->
    <style name="AbstractMainActivityTitleStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="SecondaryActivityTitleStyle" parent="MainActivityTitleStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <!-- Override settings view styles -->
    <style name="AbstractSettingsTextViewStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="AbstractSettingsIconStyle">
        <item name="tint">@color/whiteAbsolute</item>
    </style>

    <style name="ThemeSwitchCompatStyle" parent="SettingsIconStyle">
        <item name="trackTint">@color/blueYP</item>
        <item name="thumbTint">@color/blueLightYP</item>
    </style>

    <!-- Override navigation bar styles -->
    <style name="AbstractBackButtonNavigationBarStyle">
        <item name="tint">@color/whiteAbsolute</item>
    </style>

    <!-- Override search view styles -->
    <style name="AbstractSearchEditTextStyle">
        <item name="android:drawableTint">@color/blackYP</item>
        <item name="android:backgroundTint">@color/whiteAbsolute</item>
        <item name="android:iconTint">@color/blackYP</item>
        <item name="android:textColorHint">@color/blackYP</item>
    </style>

    <style name="AbstractSearchIconStyle">
        <item name="tint">@color/blackYP</item>
    </style>

    <style name="AbstractTracksNetworkErrorImageViewStyle">
        <item name="android:src">@drawable/network_error_night</item>
    </style>

    <style name="AbstractTracksInformationTextViewStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="AbstractSecondaryButtonStyle">
        <item name="android:backgroundTint">@color/whiteAbsolute</item>
        <item name="android:textColor">@color/blackYP</item>
    </style>

    <!-- Override track recycler item view styles -->
    <style name="AbstractTrackItemImageStyle">
        <item name="background">@color/blackYP</item>
    </style>

    <style name="AbstractTrackTitleStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="AbstractTrackSubtitleStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="AbstractTrackIconTitleStyle">
        <item name="tint">@color/whiteAbsolute</item>
    </style>

    <!-- Player view styles -->
    <style name="AbstractTrackInfoValueTextKeyStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="AbstractTrackDurationStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <style name="AbstractTrackPrimaryTitleStyle">
        <item name="android:textColor">@color/whiteAbsolute</item>
    </style>

    <!-- Media view styles -->
    <style name="AbstractTabLayoutStyle">
        <item name="android:background">@color/blackYP</item>
        <item name="tabTextColor">@color/whiteAbsolute</item>
        <item name="tabIndicatorColor">@color/whiteAbsolute</item>
    </style>

    <!-- Bottom navigation view styles -->
    <style name="AbstractBottomNavigationStyle">
        <item name="android:background">@color/blackYP</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/whiteAbsolute</item>
        <item name="boxStrokeColor">@drawable/text_field_outline</item>
        <item name="hintTextColor">@color/blueYP</item>
        <item name="android:textColor">@color/whiteAbsolute</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
    </style>

</resources>